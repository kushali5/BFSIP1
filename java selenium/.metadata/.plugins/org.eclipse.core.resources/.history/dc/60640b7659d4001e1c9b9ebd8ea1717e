package Programs;

public class CountEvenAndOddDigits {

	public static void main(String[] args) {
		
		int num = 23456;
		int even_count = 0;
		int odd_count = 0;
		
		while(num>0)  //23456   2345  234
		{
			int rem=num%10; //6 5 4
			if(rem%2==0)
			{
				even_count++; //1 2
				
			}
			else {
				odd_count++; //1
				
			}
		
		num = num/10;  //2345 234 23
		}
		
		

	}

}
